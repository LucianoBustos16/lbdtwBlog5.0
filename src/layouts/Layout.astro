---
import FooterSection from '@/components/sections/navbar&footer/FooterSection.astro';
import Header from '../components/sections/navbar&footer/Header.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>LBDTw - {title}</title>
		<ClientRouter/>

		<script is:inline>
			const setDarkMode = () => {
				if (localStorage.darkMode === 'true' || (!('darkMode' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
					document.documentElement.classList.add('dark')
					localStorage.darkMode = 'true';
				} else {
					document.documentElement.classList.remove('dark')
					localStorage.darkMode = 'false';
				}
			}
	
			setDarkMode();
			// Runs on view transitions navigation
			document.addEventListener('astro:after-swap', setDarkMode);
		</script>
	</head>
	<body class="bg-neutral-50 selection:bg-primary selection:text-neutral-200 dark:bg-[#000214]">
		<div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
			<Header />
			<slot />
		</div>
		<FooterSection />
	</body>
</html>
<style is:global>
	:root {
	--color-primary	: #0598D1;
	}
</style>

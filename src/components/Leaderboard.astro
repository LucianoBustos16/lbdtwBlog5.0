---
const response = await fetch(`https://api.lbdtwplus.com.ar/primera`)
const leaderboard = await response.json()

const thClasses = "px-2 py-3 text-center"
const bodyTdClasses = "px-2 py-3 text-center"
const onlyMobile = "hidden md:table-cell text-center"
---



<div class="relative overflow-x-auto shadow-md rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-textDark dark:text-gray-400">
        <thead class="text-xs text-textDark uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class=`${thClasses}`>
                    Pos.
                </th>
                <th scope="col" class=`px-2 py-3 text-left`>
                    Equipo
                </th>
                <th scope="col" class=`${thClasses}`>
                    Pts.
                </th>
                <th scope="col" class=`${thClasses}`>
                    PJ
                </th>
                <th scope="col" class=`${thClasses}`>
                    PG
                </th>
                <th scope="col" class=`${thClasses}`>
                    PE
                </th>
                <th scope="col" class=`${thClasses}`>
                    PP
                </th>
                <th scope="col" class=`${thClasses} ${onlyMobile}`>
                    GF
                </th>
                <th scope="col" class=`${thClasses} ${onlyMobile}`>
                    GC
                </th>
                <th scope="col" class=`${thClasses} ${onlyMobile}`>
                    Dif.
                </th>
        </thead>
        <tbody>
            {leaderboard.map((team: { team: { id: string; image: string; name: unknown; shortName: unknown }; rank: unknown; points: unknown; matchesPlayed: unknown; matchesWon: unknown; matchesDrawn: unknown; matchesLost: unknown; goalsFor: unknown; goalsAgainst: unknown; goalDifference: unknown }) => (
                <tr class={`odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 ${team.team.id == 'Belgrano' ? 'row-CAB' : '' }`}>
                    <th scope="row" class={`${bodyTdClasses} font-bold`}>
                        {team.rank}
                    </th>
                    <td class="px-2 py-4 whitespace-nowrap flex gap-2 items-center">
                        <img src={team.team.image} alt={`Escudo de ${team.team.name}`} class="w-6 md:w-10" width="40" height="40">
                        <div class="font-bold hidden md:block">{team.team.name}</div>
                        <div class="font-bold md:hidden">{team.team.shortName}</div>
                    </td>
                <td class={`${bodyTdClasses} font-bold`}>
                    {team.points}
                </td>
                <td class={`${bodyTdClasses}`}>
                    {team.matchesPlayed}
                </td>
                <td class={`${bodyTdClasses}`}>
                    {team.matchesWon}
                </td>
                <td class={`${bodyTdClasses}`}>
                    {team.matchesDrawn}
                </td>
                <td class={`${bodyTdClasses}`}>
                    {team.matchesLost}
                </td>
                <td class={`${bodyTdClasses} ${onlyMobile}`}>
                    {team.goalsFor}
                </td>
                <td class={`${bodyTdClasses} ${onlyMobile}`}>
                    {team.goalsAgainst}
                </td>
                <td class={`${bodyTdClasses} ${onlyMobile}`}>
                    {team.goalDifference}
                </td>
                    </tr>
                    ))
                  }                
            </tr>
        </tbody>
    </table>
</div>


<style>
    .row-CAB{
        @apply  bg-primary text-white dark:bg-primary
    }
</style>
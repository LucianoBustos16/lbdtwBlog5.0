---
import Icon from '../icons/Icon.astro';
import { iconPaths } from '../icons/icons';

// Destructure the properties from Astro.props
const { url, name, icon, class: className, ...rest  } = Astro.props;

// Define TypeScript interface for the properties
interface Props {
  url: string;
  name: string;
  icon: keyof typeof iconPaths;
  class?: string;
}
---


<a
  id={url === "/" ? "home" : url.replace("/", "")}
  href={url}
  data-astro-prefetch
  class=`flex flex-col items-center w-full rounded-lg text-base font-medium text-neutral-600 outline-none ring-zinc-500 hover:text-neutral-500 focus-visible:ring dark:text-neutral-400 dark:ring-zinc-200 dark:hover:text-neutral-500 dark:focus:outline-none md:py-3 md:text-sm 2xl:text-base`
>
<div class:list={['md:hidden', className]}>
{ icon && <Icon icon={icon} />}
</div>
  {name}
</a>

